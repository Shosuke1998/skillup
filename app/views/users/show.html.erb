<div class="upper-content">
  <%= link_to('トップページに戻る',root_path,class:"top-btn") %>
</div>
<div class="grade">
  <h1>現在の<%= @user.name %>の成績</h1>
</div>
<h1 class="show-title">頑張って満点を取ろう！</h1>
<ul class="check-lists">
  <li class="check-box-area">
    <div class="check-list">
      <p class="checkbox">pre-,per-,pro-,pur-編:<%= @user.pre_score%>点</p>
    </div>
    <% if @user.pre_score == 18 %>
      <div class="master">master!</div>
    <% end %>  
  </li>
  <li class="check-box-area">
    <div class="check-list">
      <p class="checkbox">前置詞編:<%= @user.preposition_score%>点</p>
    </div>
    <% if @user.preposition_score == 24 %>
      <div class="master">master!</div>
    <% end %>  
  </li>
  <li class="check-box-area">
    <div class="check-list">
      <p class="checkbox">英作文で使えるフレーズ編:<%= @user.input_words%>点</p>
    </div>
    <% if @user.input_words == 19 %>
      <div class="master">master!</div>
    <% end %>  
  </li>
  <li class="check-box-area">
    <div class="check-list">
      <p class="checkbox">意外な意味を持つ英単語:<%= @user.unexp_score%>点</p>
    </div>
    <% if @user.unexp_score == 46 %>
      <div class="master">master!</div>
    <% end %>  
  </li>
  <li class="check-box-area">
    <div class="check-list">
      <p class="checkbox">類義語:<%= @user.similar_score%>点</p>
    </div>
    <% if @user.input_words == 100 %>
      <div class="master">master!</div>
    <% end %>  
  </li>
  
</ul>

