<div class="upper-content">
  <%= link_to('トップページに戻る',root_path,class:"top-btn") %>
</div>
<div class="title-2">
  単語テスト
</div>

<div class="input-area">
  <p id ="ask-word"></p>
  <input type="text" id ="word">
  <button id="button">OK</button>
</div>
<p class="preposition-text">問題文に合う意味の基本動詞を記述しよう</p>
<div id="answer-modal" class="hidden">
  <p id="word-answer"></p>
</div>
<div id="form" class="hidden" >
    <%= form_with(url: skill_path(current_user.id),local: true,class:"score-form",method: :put) do |f| %>
      <%# <%= f.label :メールアドレス<br />  %>
      <div id = "correct-number-area"></div>
      <%= f.number_field :input_words, autofocus: true,class:"input-default",id:"pre-score" %>
      <%= f.submit "得点を記録する",class:"score-btn" %>
      <% end %> 
    <%= link_to 'もう一度行う',test2_skills_path,class:"once-btn" %> 
  </div>
</div>
