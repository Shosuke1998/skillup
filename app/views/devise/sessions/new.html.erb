<div class="session-new">
<h2 class="sign-up-in">ログイン</h2>
 

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='login-flash-message'> 
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div> 
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input-default" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"input-default" %>
  </div>

  <div class="actions">
    <%=  f.submit "ログイン",class:"submit-btn" %>
  </div>
<% end %>

</div>
